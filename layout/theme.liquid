<!doctype html>
<html lang="{{ request.locale.iso_code | default: 'en' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ page_title | default: shop.name }} â€“ {{ shop.name }}</title>
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  {{ content_for_header }}
</head>
<body class="theme-shell">
  {% section 'header-bar' %}
  <div class="layout">
    <aside class="sidebar" aria-label="Shop navigation">
      {% section 'left-category-nav' %}
    </aside>

    <main class="content">
      <div class="theme-shell__inner">
        {{ content_for_layout }}
      </div>
    </main>
  </div>
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</body>
</html>
