<div class="sidebar__title">Your account</div>
<nav class="sidebar__menu sidebar__menu--accounts">
  <a class="sidebar__link sidebar__link--soft" href="{{ routes.account_login_url }}">Sign In</a>
  <a class="sidebar__link sidebar__link--soft" href="{{ routes.account_register_url }}">Create Account</a>
  <a class="sidebar__link sidebar__link--soft" href="{{ routes.account_url }}">My Account</a>
</nav>

<div class="sidebar__title sidebar__title--spaced">Shop by category</div>
<nav class="sidebar__menu" aria-label="Category navigation">
  {% assign default_categories = [
    'Clothing & Apparel|clothing-apparel',
    'Electronics|electronics',
    'Home, Garden & Furniture|home-garden-furniture',
    'Sports & Outdoors|sports-outdoors',
    'Toys, Kids & Babies|toys',
    'Pets|pets',
    'Beauty, Health & Personal Care|beauty-health-personal-care',
    'Home Improvement & Tools|home-improvement',
    'Automotive & Motorcycle|automotive-motorcycle',
    'Jewelry & Watches|jewelry-watches',
    'Bags & Shoes|bags-shoes',
    'Food & Grocery|food-grocery',
    'Industrial & Scientific|industrial-scientific'
  ] %}

  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% assign handle = block.settings.handle | default: block.settings.title | handleize %}
      <a class="sidebar__link" href="{{ routes.collections_url }}/{{ handle }}">{{ block.settings.title }}</a>
    {% endfor %}
  {% else %}
    {% for entry in default_categories %}
      {% assign parts = entry | split: '|' %}
      <a class="sidebar__link" href="{{ routes.collections_url }}/{{ parts[1] }}">{{ parts[0] }}</a>
    {% endfor %}
  {% endif %}
</nav>

{% schema %}
{
  "name": "Left category navigation",
  "settings": [],
  "blocks": [
    {
      "type": "category_link",
      "name": "Category",
      "settings": [
        {"type": "text", "id": "title", "label": "Title", "default": "Clothing & Apparel"},
        {"type": "text", "id": "handle", "label": "Collection handle", "default": "clothing-apparel"}
      ]
    }
  ],
  "presets": [
